<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/cardMarginVertical"
    android:paddingLeft="@dimen/cardMarginHorizontal"
    android:paddingRight="@dimen/cardMarginHorizontal"
    android:paddingTop="@dimen/cardMarginVertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/my_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="4dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is header"
                android:textColor="@android:color/white"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/post_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_title"
                android:layout_marginTop="8dp"
                android:text="Lorem Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                android:textColor="@android:color/white"
                android:textSize="15sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>